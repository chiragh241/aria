# Aria - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# LLM Configuration
# =============================================================================

# Anthropic API (required for cloud LLM)
ANTHROPIC_API_KEY=sk-ant-your-api-key-here

# Ollama (local LLM - optional, defaults to localhost)
OLLAMA_HOST=http://localhost:11434

# =============================================================================
# Slack Integration (optional)
# =============================================================================

# Get these from https://api.slack.com/apps
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_APP_TOKEN=xapp-your-app-token

# =============================================================================
# WhatsApp Integration (optional)
# =============================================================================

# WhatsApp bridge URL (if running separately)
WHATSAPP_BRIDGE_URL=http://localhost:3001

# =============================================================================
# Web Dashboard
# =============================================================================

# JWT secret for authentication (generate a random string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Admin password for web dashboard
ADMIN_PASSWORD=admin

# Web server configuration
WEB_HOST=0.0.0.0
WEB_PORT=8080

# =============================================================================
# Redis (optional - for caching and pub/sub)
# =============================================================================

REDIS_URL=redis://localhost:6379

# =============================================================================
# Database & Storage
# =============================================================================

# Data directory for persistent storage
DATA_DIR=./data

# ChromaDB path for vector storage
CHROMADB_PATH=./data/chromadb

# =============================================================================
# Email (optional - for email skill)
# =============================================================================

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

IMAP_HOST=imap.gmail.com
IMAP_PORT=993
IMAP_USER=your-email@gmail.com
IMAP_PASSWORD=your-app-password

# =============================================================================
# SMS via Twilio (optional - for SMS skill)
# =============================================================================

TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# Google Calendar (optional - for calendar skill)
# =============================================================================

# Path to Google OAuth credentials JSON file
GOOGLE_CREDENTIALS_PATH=./config/google-credentials.json

# =============================================================================
# Weather (WeatherAPI.com - https://www.weatherapi.com/)
# =============================================================================
# Get your key at https://www.weatherapi.com/
WEATHERAPI_KEY=your-weatherapi-key

# =============================================================================
# Security
# =============================================================================

# Active security profile: paranoid, balanced, or trusted
SECURITY_PROFILE=balanced

# Approval timeout in seconds
APPROVAL_TIMEOUT=300

# =============================================================================
# Logging
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Log file path
LOG_FILE=./data/logs/aria.log
